<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Cursos">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/strTodosCurso"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgCursoAndroid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurAndroid"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursoandroid" />

            <ImageView
                android:id="@+id/imgCursoKotlin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="clickCurKotlin"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursokotlin" />

            <ImageView
                android:id="@+id/imgCursoC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurC"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursolingc" />

            <ImageView
                android:id="@+id/imgCursoCSharp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurCSharp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursolingcsharp" />

            <ImageView
                android:id="@+id/imgCursoPhp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurPhp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursophp" />

            <ImageView
                android:id="@+id/imgCursoPortugol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurPortugol"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursoportugol" />

            <ImageView
                android:id="@+id/imgCursoVideos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="clickCurCursoVideo"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cursovideo" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:onClick="clickCursosVoltar"
        android:text="@string/strVoltar"
        android:textColor="#000"
        android:textSize="20sp"
        app:backgroundTint="@color/cianoEscuro"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>