<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="img">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <style name="conteiner_campos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">380dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="campos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:paddingLeft">7dp</item>
    </style>
    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="cadastrese">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/chocolate</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="titulo">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/creme</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo_tamma</item>
    </style>
</resources>