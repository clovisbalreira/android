<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/billEditText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:stretchColumns="1,2,3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="226dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/billTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/bill"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/billEditText0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:height="48dp"
                android:ems="10"
                android:gravity="left"
                android:inputType="numberDecimal"
                android:text="@string/valor"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tenTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:text="@string/ten"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/fifTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fif"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/twentyTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/twenty"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tipTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/tip"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tip10EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tip15EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tip20EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/total"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/total10EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/total15EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/total20EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/custom"
                android:textColor="#000000" />

            <SeekBar
                android:id="@+id/customSeekBar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_span="2"
                android:focusable="false"
                android:foregroundGravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:progress="18" />

            <TextView
                android:id="@+id/customTipTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="18%"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tipCustomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/tip"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tipCustomEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/totalCustomTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/total"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/totalCustomEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPersonName"
                android:longClickable="false"
                android:text="@string/valor"
                android:textColor="#000000" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>